<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:text="TextView"
		android:textSize="12sp"
		android:textColor="#FF5722" />
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:layout_weight="1">
		<EditText
			android:id="@+id/editText"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/transparent"
			android:textSize="12sp"
			android:textColor="#FFFF00"
			android:textColorHint="#B71C1C" />
	</ScrollView>
	<LinearLayout
		android:id="@+id/serepl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical"
			android:layout_weight="1">
			<EditText
				android:id="@+id/findText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="@string/findt"
				android:textColorHint="#607D8B"
				android:lines="1"
				android:imeOptions="actionNone"
				android:inputType="textVisiblePassword|textNoSuggestions" />
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<CheckBox
					android:id="@+id/ignore"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Aa"
					android:textSize="12sp"
					android:textColor="#000000" />
				<CheckBox
					android:id="@+id/regex"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text=".*"
					android:textSize="12sp"
					android:textColor="#000000" />
			</LinearLayout>
			<EditText
				android:id="@+id/replaceText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="@string/replacet"
				android:textColorHint="#607D8B"
				android:imeOptions="actionNone"
				android:inputType="textVisiblePassword|textNoSuggestions" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear5"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<TextView
				android:id="@+id/sup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text=""
				android:textSize="12sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/srhnum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="0/0"
				android:textSize="12sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/sdown"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text=""
				android:textSize="12sp"
				android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<TextView
				android:id="@+id/find"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/findt"
				android:textSize="12sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/replace"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/replacet"
				android:textSize="12sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/all"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/allt"
				android:textSize="12sp"
				android:textColor="#000000" />
		</LinearLayout>
	</LinearLayout>
	<HorizontalScrollView
		android:id="@+id/hscroll1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/instrl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/serrep"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="2dp"
				android:padding="8dp"
				android:text="@string/searep"
				android:textSize="12sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/save"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:padding="8dp"
				android:text="@string/saveh"
				android:textSize="12sp"
				android:textColor="#000000" />
		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>
