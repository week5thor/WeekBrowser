<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/linear8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="@string/bars_setting"
				android:textSize="18sp"
				android:textStyle="bold|italic"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/st1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="@string/general"
				android:textSize="18sp"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/showsearch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/show_search_panel"
				android:textSize="12sp"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/searchtop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/search_panel_top"
				android:textSize="12sp"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<CheckBox
					android:id="@+id/hidescroll"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="@string/hide_panels"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_weight="1" />
				<Button
					android:id="@+id/hidehint"
					android:layout_width="30dp"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:text="\?"
					android:textSize="12sp"
					android:textColor="#000000" />
			</LinearLayout>
			<TextView
				android:id="@+id/sst"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/buttons_size"
				android:textSize="12sp"
				android:textColor="#000000" />
			<SeekBar
				android:id="@+id/size"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:max="40" />
			<TextView
				android:id="@+id/st2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="@string/tool_bar"
				android:textSize="18sp"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/showtool"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/show_tools_panel"
				android:textSize="12sp"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/tooltop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/tools_panel_top"
				android:textSize="12sp"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/dots"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/tool_bar_dot"
				android:textSize="12sp"
				android:textColor="#000000" />
			<HorizontalScrollView
				android:id="@+id/hscroll2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
					android:orientation="horizontal" />
			</HorizontalScrollView>
			<LinearLayout
				android:id="@+id/divider3"
				android:layout_width="match_parent"
				android:layout_height="4dp"
				android:padding="8dp"
				android:background="#000000"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/sst2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Click action: "
					android:textSize="12sp"
					android:textColor="#000000" />
				<EditText
					android:id="@+id/click"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="-990"
					android:textColorHint="#607D8B"
					android:inputType="numberSigned" />
				<Button
					android:id="@+id/clickmore"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:text=""
					android:textSize="12sp"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/clickhint"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="12sp"
					android:textColor="#000000" />
			</LinearLayout>
			<EditText
				android:id="@+id/clickarg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="_s"
				android:textColorHint="#607D8B" />
			<LinearLayout
				android:id="@+id/divider"
				android:layout_width="match_parent"
				android:layout_height="4dp"
				android:padding="8dp"
				android:background="#000000"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/sst3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Long click action: "
					android:textSize="12sp"
					android:textColor="#000000" />
				<EditText
					android:id="@+id/longclick"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="-990"
					android:textColorHint="#607D8B"
					android:inputType="numberSigned" />
				<Button
					android:id="@+id/longclickmore"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:text=""
					android:textSize="12sp"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/longclickhint"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="12sp"
					android:textColor="#000000" />
			</LinearLayout>
			<EditText
				android:id="@+id/longarg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="_s"
				android:textColorHint="#607D8B" />
			<LinearLayout
				android:id="@+id/divider2"
				android:layout_width="match_parent"
				android:layout_height="4dp"
				android:padding="8dp"
				android:background="#000000"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/sst4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Icon: "
					android:textSize="12sp"
					android:textColor="#000000" />
				<EditText
					android:id="@+id/icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="-&gt;"
					android:textColorHint="#607D8B" />
				<Button
					android:id="@+id/iconmore"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:text=""
					android:textSize="12sp"
					android:textColor="#000000" />
				<Button
					android:id="@+id/recicon"
					android:layout_width="40dp"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:textSize="14sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:orientation="horizontal">
				<Button
					android:id="@+id/left"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:padding="8dp"
					android:text=""
					android:textSize="25sp"
					android:textColor="#000000"
					android:layout_weight="1" />
				<Button
					android:id="@+id/right"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:padding="8dp"
					android:text=""
					android:textSize="25sp"
					android:textColor="#000000"
					android:layout_weight="1" />
				<Button
					android:id="@+id/add"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:padding="8dp"
					android:text=""
					android:textSize="25sp"
					android:textColor="#000000"
					android:layout_weight="1" />
				<Button
					android:id="@+id/remove"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:padding="8dp"
					android:text=""
					android:textSize="25sp"
					android:textColor="#000000"
					android:layout_weight="1" />
			</LinearLayout>
			<EditText
				android:id="@+id/direct"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="Edit Text"
				android:textColorHint="#607D8B" />
			<LinearLayout
				android:id="@+id/linear11"
				android:layout_width="match_parent"
				android:layout_height="700dp"
				android:padding="8dp"
				android:orientation="vertical" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
